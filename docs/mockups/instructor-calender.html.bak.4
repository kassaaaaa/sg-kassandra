<script>
    const viewSelector = document.getElementById('view-selector');
    const calendarTitle = document.getElementById('calendar-title');
    
    const viewButtons = {
        month: document.getElementById('month-view-btn'),
        week: document.getElementById('week-view-btn'),
        day: document.getElementById('day-view-btn'),
        agenda: document.getElementById('agenda-view-btn'),
    };
    const views = {
        month: document.getElementById('month-view'),
        week: document.getElementById('week-view'),
        day: document.getElementById('day-view'),
        agenda: document.getElementById('agenda-view'),
    };

    const activeClasses = ['text-primary', 'bg-surface', 'shadow-sm', 'dark:bg-gray-700', 'dark:text-white'];
    const inactiveClasses = ['text-text-body', 'dark:text-gray-400'];

    function switchView(viewName) {
        // Update calendar title
        if (viewName === 'month') {
            calendarTitle.textContent = 'November 2025';
        } else if (viewName === 'week') {
            calendarTitle.textContent = 'November 10  16, 2025';
        } else if (viewName === 'day') {
            calendarTitle.textContent = 'November 12, 2025';
        } else if (viewName === 'agenda') {
            calendarTitle.textContent = 'Nov 10  16, 2025';
        }

        // Hide all views
        Object.values(views).forEach(view => {
            if (view) {
                view.classList.add('hidden');
                view.classList.remove('grid', 'flex');
            }
        });
        
        // Show the selected view
        if (views[viewName]) {
            views[viewName].classList.remove('hidden');
            if (viewName === 'week' || viewName === 'day' || viewName === 'month') {
                 views[viewName].classList.add('grid');
            }
            if (viewName === 'agenda') {
                views[viewName].classList.add('flex');
            }
        }

        // Update button styles
        Object.entries(viewButtons).forEach(([name, button]) => {
            if (button) {
                if (name === viewName) {
                    button.classList.add(...activeClasses);
                    button.classList.remove(...inactiveClasses);
                } else {
                    button.classList.remove(...activeClasses);
                    button.classList.add(...inactiveClasses);
                }
            }
        });
    }

    if (viewSelector) {
        viewSelector.addEventListener('click', (event) => {
            const clickedButton = event.target.closest('button');
            if (!clickedButton) return;

            if (clickedButton.id === 'month-view-btn') {
                switchView('month');
            } else if (clickedButton.id === 'week-view-btn') {
                switchView('week');
            } else if (clickedButton.id === 'day-view-btn') {
                switchView('day');
            } else if (clickedButton.id === 'agenda-view-btn') {
                switchView('agenda');
            }
        });
    }

    // Generic Modal Handling
    function setupModal(modalId, openBtnId, closeBtnId) {
        const modal = document.getElementById(modalId);
        const openBtn = document.getElementById(openBtnId);
        const closeBtn = document.getElementById(closeBtnId);

        const open = () => modal && modal.classList.remove('hidden');
        const close = () => modal && modal.classList.add('hidden');

        if (openBtn) openBtn.addEventListener('click', open);
        if (closeBtn) closeBtn.addEventListener('click', close);
        if (modal) {
            modal.addEventListener('click', (event) => {
                if (event.target === modal) {
                    close();
                }
            });
        }
    }

    // Setup All Modals
    document.addEventListener('DOMContentLoaded', () => {
        setupModal('course-detail-modal', null, 'close-course-detail-modal-btn');
        setupModal('add-availability-modal', 'add-availability-btn', 'close-add-availability-modal-btn');
        setupModal('block-time-modal', 'block-time-btn', 'close-block-time-modal-btn');
        
        // Add listeners for dynamically created event items
        const eventItems = document.querySelectorAll('.event-item');
        const courseDetailModal = document.getElementById('course-detail-modal');
        eventItems.forEach(item => {
            item.addEventListener('click', () => courseDetailModal && courseDetailModal.classList.remove('hidden'));
        });
    });


    // Set initial view to 'month'
    switchView('month');
</script>
